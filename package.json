{
  "name": "book-a-meal",
  "version": "1.0.0",
  "description": "Andela bootcamp project",
  "main": "server/server.js",
  "repository": "https://github.com/nouwatinjacob/book-a-meal",
  "author": "Nouwatin Jacob <jaysansa@gmail.com>",
  "license": "MIT",
  "engines": {
    "node": "8.11.1"
  },
  "nyc": {
    "include": [
      "server/controllers/*.js",
      "server/models/*.js",
      "server/routes/*.js"
    ]
  },
  "scripts": {
    "start:dev": "nodemon server/server.js --exec babel-node",
    "dev": "webpack --mode development",
    "start:webpack": "webpack-dev-server --config ./webpack.config.js --mode development",
    "start": "node ./dist/server.js",
    "heroku-postbuild": "npx babel server/ --out-dir dist/ --ignore server/test",
    "test:endpoint": "cross-env-shell NODE_ENV=test sequelize db:migrate:undo:all && sequelize db:migrate && nyc --reporter=html mocha --require babel-core/register server/test/*.test.js --exit",
    "test": "yarn test:endpoint && nyc report",
    "coverage": "nyc report --reporter=text-lcov | coveralls"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.4",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-plugin-transform-react-jsx": "^6.24.1",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "chai": "^4.1.2",
    "chai-http": "^4.0.0",
    "coveralls": "^3.0.0",
    "cross-env": "^5.1.5",
    "eslint": "^4.19.1",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-plugin-import": "^2.11.0",
    "html-webpack-plugin": "^3.2.0",
    "mocha": "^5.1.1",
    "mocha-lcov-reporter": "^1.3.0",
    "nodemon": "^1.17.3",
    "nyc": "^11.7.1",
    "react-hot-loader": "^4.2.0",
    "supertest": "^3.0.0",
    "webpack": "^4.8.3",
    "webpack-cli": "^2.1.3",
    "webpack-dev-server": "^3.1.4"
  },
  "dependencies": {
    "babel-register": "^6.26.0",
    "bcrypt-nodejs": "^0.0.3",
    "body-parser": "^1.18.2",
    "dotenv": "^5.0.1",
    "express": "^4.16.3",
    "jsonwebtoken": "^8.2.1",
    "jwt-decode": "^2.2.0",
    "lodash": "^4.17.10",
    "moment": "^2.22.1",
    "morgan": "^1.9.0",
    "pg": "^7.4.1",
    "pg-hstore": "^2.3.2",
    "react": "^16.3.2",
    "react-dom": "^16.3.2",
    "sequelize": "^4.37.6",
    "sequelize-cli": "^4.0.0",
    "validator": "^9.4.1",
    "validatorjs": "^3.14.2"
  }
}
